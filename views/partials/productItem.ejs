<article class="prod">
    <a href="/productos/<%= product.id %> ">
        <div class="prod-img-box">
            <img src="/images/<%= product.image %>" alt="Vino tinto" />
        </div>

    </a>
    <div class="prod-name-box">
        <p><%= product.productName %></p>
        <i class="far fa-heart love"></i>
    </div>
    <div class="prod-price-cart-box">
        <p>$<%= product.price %></p>
        <form action="/carrito/agregar" method="POST">
            <button type="submit" class="button create">
                Agregar al carrito
                <i class="fas fa-shopping-cart"></i>
            </button>
        </form>
    </div>
</article>
