<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs",{title:"LOGIN"}) %>
    </head>

    <body>
        <%- include("../partials/header.ejs") %>
        <main class="login-main">
            <section class="form-register">
                <h2 class="padding">Inicia sesión</h2>
                <form action="" class="form">
                    <label for="email">E-mail</label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        placeholder="E-mail"
                    />
                    <label for="password">Contraseña</label>
                    <input
                        type="password"
                        name="password"
                        id="password"
                        placeholder="Contraseña"
                    />
                    <a class="marginBottom" href="">Olvidé mi contraseña</a>
                    <button class="button create">Entrar</button>
                    <a class="marginTop" href="/usuarios/registro"
                        >Crear una cuenta</a
                    >
                </form>
            </section>
        </main>
        <%- include("../partials/footer.ejs") %>
        <script>
            function openNav() {
                document.getElementById("mySidebar").style.marginLeft = "270px";
            }

            function closeNav() {
                document.getElementById("mySidebar").style.marginLeft = "0";
            }
        </script>
    </body>
</html>
