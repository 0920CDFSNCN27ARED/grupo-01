<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs") %>
        <title>PERFIL | WINDERFUL</title>
    </head>

    <body>
        <%- include("../partials/header.ejs") %>
        <main class="profile-main">
            <section class="profile-left">
                <div class="profile-image">
                    <img src="/images/<%= user.image %>" alt="" />
                </div>
                <div class="profile-nav">
                    <ul>
                        <li><button class="profile-button">Perfil</button></li>
                        <li>
                            <button class="profile-button">Mis compras</button>
                        </li>
                        <li>
                            <button class="profile-button">
                                Mis favoritos
                            </button>
                        </li>
                        <li>
                            <button class="profile-button">
                                Mis direcciones
                            </button>
                        </li>
                        <li>
                            <form method="post" action="/usuarios/perfil">
                                <button
                                    class="profile-button red"
                                    type="submit"
                                >
                                    Cerrar sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </section>
            <section class="profile-right">
                <div>
                    <h2>Datos personales</h2>
                </div>
                <div class="profile-data">
                    <div class="profile-name">
                        <% if(user.category == "empresa"){ %>
                        <p>Nombre de la bodega</p>
                        <p><%= user.cellarName %></p>
                        <%} else {%>
                        <p>Nombre</p>
                        <p><%= user.firstName %> <%= user.lastName %></p>
                        <% } %>
                    </div>
                    <div>
                        <p>E-mail</p>
                        <p><%= user.email %></p>
                    </div>
                    <div>
                        <p>Contraseña</p>
                        <a href="">Cambiar contraseña</a>
                    </div>
                </div>
            </section>
        </main>
        <%- include("../partials/footer.ejs") %>
        <script>
            function openNav() {
                document.getElementById("mySidebar").style.marginLeft = "270px";
            }

            function closeNav() {
                document.getElementById("mySidebar").style.marginLeft = "0";
            }
        </script>
    </body>
</html>
