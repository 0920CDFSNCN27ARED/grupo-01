<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs") %>
        <link rel="stylesheet" href="/css/collapseDetails.css" />
        <link rel="stylesheet" href="/css/productDetail.css" />
        <script defer src="/js/productPreview.js"></script>
        <script
            type="text/javascript"
            src="/js/validations/validator.min.js"
        ></script>
        <script defer src="/js/validations/validationFunctions.js"></script>
        <title>NUEVO PRODUCTO | WINEDERFUL</title>
        <script defer src="/js/validations/newProduct.js"></script>
        <script defer src="/js/prodDetail.js"></script>
    </head>
    <body>
        <%- include("../partials/header.ejs") %>
        <main class="main-newProduct">
            <section class="reveal">
                <h2 id="title" class="desktop subtitle-wine">
                    Previsualización
                </h2>
                <div class="previewContainer" id="previewContainer">
                    <img src="" alt="Image Preview" class="imagePreview" />
                    <span>Image Preview</span>
                </div>

                <h2 id="price" class="price">$100</h2>
                <p id="description" class="pDescription descPreview">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Quos, ut culpa dignissimos explicabo nulla fugiat
                    praesentium laboriosam veritatis? Beatae culpa ad deleniti
                    quae qui velit adipisci necessitatibus ipsum officiis
                    laudantium.
                </p>
                <section class="specific">
                    <div id="colapse" class="colapse">
                        <p>ESPECIFICACIONES</p>
                        <i class="fas fa-chevron-down"></i>
                    </div>

                    <div id="inside" class="description font-description">
                        <div>
                            <p>UVA:</p>
                            <p id="grape" class="data"></p>
                        </div>
                        <div>
                            <p>COSECHA:</p>
                            <p id="year" class="data"></p>
                        </div>
                        <!-- <div>
                            <p>PAIS:</p>
                            <p class="data"></p>
                        </div>
                        <div>
                            <p>ZONA:</p>
                            <p class="data"></p>
                        </div>
                        <div>
                            <p>BODEGA:</p>
                            <p class="data"></p>
                        </div> -->
                        <div>
                            <p>TEMPERATURA DE SERVICIO:</p>
                            <p id="temperature" class="data"></p>
                        </div>
                        <div>
                            <p>CRIANZA (EN AÑOS):</p>
                            <p id="aged" class="data"></p>
                        </div>
                    </div>
                </section>
            </section>
            <section class="form form-newProduct">
                <form
                    action="/productos/crear"
                    method="POST"
                    enctype="multipart/form-data"
                    class="form"
                    id="newProd-form"
                >
                    <label for="productName">Nombre del vino</label>
                    <input type="text" name="productName" id="productName" />
                    <label for="productPicture">Foto del producto</label>
                    <input
                        type="file"
                        name="image"
                        id="productPicture"
                        multiple
                    />
                    <label for="productPrice">Precio</label>
                    <input
                        min="0"
                        type="number"
                        name="price"
                        id="productPrice"
                    />
                    <label for="productDescription">Descripción</label>
                    <textarea
                        name="description"
                        id="productDescription"
                        cols="30"
                        rows="10"
                        placeholder="Agregue detalles que se aprecien a la vista, olores y sabores en boca."
                    ></textarea>
                    <label for="productGrape">Varietal </label>
                    <input type="text" name="grape" id="productGrape" />
                    <label for="productYear">Añada</label>
                    <select name="year" id="productYear">
                        <option value="">Selecciona un año</option>
                    </select>
                    <label for="productTemperature"
                        >Temperatura de servicio</label
                    >
                    <input
                        type="number"
                        name="temperature"
                        id="productTemperature"
                    />
                    <label for="productAged">Crianza</label>
                    <input type="number" name="aged" id="productAged" />
                    <label for="productStock">Stock</label>
                    <input
                        type="number"
                        min="0"
                        name="stock"
                        id="productStock"
                    />

                    <label for="productDiscount">Descuento</label>
                    <input
                        type="number"
                        min="0"
                        name="discount"
                        id="productDiscount"
                    />

                    <button type="submit" class="button create margin">
                        Crear producto
                    </button>
                </form>
            </section>
        </main>
        <%- include("../partials/footer.ejs") %>
    </body>
</html>
